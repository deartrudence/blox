
<div class="profile">

<div class="profile-heading">
  <div class="container">
    <div class="row">
      <div class="col-md-8 col-md-offset-2 profile-info">
        <div class="avatar">
          <% if current_user.profile.avatar.present? %>
            <%= image_tag current_user.profile.avatar.url, class: "img-circle"%>
          <% elsif current_user.avatar_url.present? %>
            <%= image_tag current_user.avatar_url, class: "img-circle" %>
          <% else %>
            <%= image_tag gravatar_url(current_user), class: "img-circle" %>
          <% end %>
        </div>
        <h3>Update you profile</h3>
      

      </div>
    </div>
  </div>
</div>
<!-- <div class="profile-border" width="300" height="200"></div> -->
<div class="polygon-divider" width="300" height="200"></div>

<%= render 'form' %>

<div class="col-md-8 col-md-offset-2">
<%= link_to 'Show', @profile %> |
<%= link_to 'Back', profiles_path %>
</div>

<br><br><br>

</div>


