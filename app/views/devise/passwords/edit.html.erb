<div class="polygon"></div>

<div id="landing-content">
	<div class="container">
		<div class="row">
			<div class="col-md-10 col-md-offset-1">
				<div class="row">
					<div class="col-md-6 col-md-offset-3">
						<div class="landing-panel form-panel weblox-panel ">
							<div class="weblox-branding">
								<%= image_tag("weblox-branding.png", class: "weblox-main-branding") %>
								<div class="arrow-down"></div>
							</div>
						
							<div class="weblox-form panel-padding">

							<h2>Change your password</h2>

							<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
							  <%= devise_error_messages! %>
							  <%= f.hidden_field :reset_password_token %>

							<div class="form-group">
							    <%= f.password_field :password, autofocus: true, autocomplete: "off", placeholder: "new password" , class: "form-control"%>
							</div>

							<div class="form-group">
							    <%= f.password_field :password_confirmation, autocomplete: "off", placeholder: "confirm new password", class: "form-control" %>
							</div>


							  <div>
							  	<%= f.submit "Change my password", class: "btn btn-danger btn-block" %>
							  </div>
							<% end %>

<%= render "devise/shared/links" %>
