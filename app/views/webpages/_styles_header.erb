/* ========================================
	CSS Styling for Build Weblox Template.
	www.buildweblox.com
   ======================================== */

body{
	font: 300 18px/30px "Open Sans",arial,sans-serif;
}

p{
	font-size: 16px;
}

h1, h2, h3, h4, h5, h6 {
    color: #272727;
    font-family: 'Montserrat',sans-serif;
    font-weight: 400;
    line-height: 1.17em;
    /*margin: 0 0 20px;*/
}
h1 {
    font-size: 3.5em;
    text-transform: uppercase;
}
h2 {
    font-size: 2.4em;
    text-transform: uppercase;
}
h3 {
    font-size: 30px;
    text-transform: uppercase;
}
h4 {
    font-size: 1.8em;
    text-transform: uppercase;
}
h5 {
    font-size: 21px;
}
h6 {
    /*font-size: 1em;*/
    font-size: 16px;
    line-height: 22px;
}

section{
	padding: 150px 0;
}

.light-gray-bg{ background-color: #f5f5f5; }

.dark-gray-bg{ background-color: #333333; }

.rose-bg{ background-color: #C61D38; }

