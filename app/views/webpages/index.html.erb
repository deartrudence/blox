<div class="container web-page-listing">
  <div class="row">
    <div class="col-md-8 col-md-offset-2">
      
      <br><br><br><br><br>
      <div class="panel panel-default">
        <div class="panel-heading">
          <h4><i class="fa fa-desktop"></i> My webpages</h4>
        </div>
        <div class="panel-body">
          <table class='table table-striped table-bordered'>
            <thead>
              <tr>
                <th>Webpage</th>
                <th  style="width: 30%; ">Actions</th>
              </tr>
            </thead>

            <tbody>
              <% @webpages.each do |webpage| %>
                <tr>
                  <td><%= webpage.name %></td>
                  <td>
                    <%= link_to 'Edit', edit_webpage_path(webpage), class: "btn btn-info btn-sm" %>
                    <%= link_to 'Destroy', webpage, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger btn-sm" %>
                  </td>
                </tr>
              <% end %>
            </tbody>
          </table>
          
          <%= link_to 'Create New Webpage', new_webpage_path, class: "btn btn-primary" %>

        </div>
      </div>
      

      <br>

      

      <br>
    </div>
  </div>
</div>


