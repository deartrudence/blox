<%= form_for(@bloc) do |f| %>
  <% if @bloc.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@bloc.errors.count, "error") %> prohibited this bloc from being saved:</h2>

      <ul>
      <% @bloc.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :name %><br>
    <%= f.text_field :name , {class: 'form-control'}%>
  </div>
  <div class="field">
    <%= f.label :code %><br>
    <%= f.text_area :code, {class: 'form-control'} %>
  </div>
  <div class="field">
    <%= f.label :img_url %><br>
    <%= f.text_area :img_url, {class: 'form-control'} %>
  </div>
  <div class="field">
    <%= f.collection_select :category_id, Category.all, :id, :name, {prompt: "Select a category"}, {class: "form-control"} %>
  </div>
  <div class="actions">
    <%= f.submit  class: "btn btn-primary" %>
  </div>
<% end %>
