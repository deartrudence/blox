
<div class="polygon" height="300" width="300"></div>

<div class="close-page"><a href="/"><i class="fa fa-times fa-3x"></i></a></div>

<div class="container">
    <div class="row">
      <div class="col-md-12 text-center">

<div class="text-center">
  <div class="about-me">
  <h3>Send A message to Us</h3>
</div>

  <%= simple_form_for @contact, :html => {:class => 'form-horizontal' } do |f| %>
    <%= f.input :name, :required => true, class: 'form-control' %>
    <%= f.input :email, :required => true, class: "form-control" %>
    <%= f.input :message, :as => :text, :required => true, class: "form-control" %>
    <div class= "hidden">
      <%= f.input :nickname, :hint => 'Leave this field blank!' %>
    </div>
    <div>
      </br>
      <%= f.button :submit, 'Send message', :class=> "btn btn-primary" %>
    </div>
  <% end %>
</div>

    </div>
    </div>
  </div>