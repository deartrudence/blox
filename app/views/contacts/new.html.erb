<div class="static-page">
<div class="layoutsbg" height="300" width="300"></div>

<div id="landing-content">
  <div class="container">
    <div class="row">
      <div class="col-md-10 col-md-offset-1">
        <div class="row">
          <div class="col-md-6 col-md-offset-3">
            <div class="landing-panel weblox-panel form-panel">
              <div class="weblox-branding">
                <%= image_tag("weblox-branding.png", class: "weblox-main-branding") %>
                <div class="arrow-down"></div>
              </div>

              <div class="weblox-form panel-padding">
                <h4>Send Us A Message!</h4>

                <%= simple_form_for @contact, :html => {:class => '' } do |f| %>
                  <div class="form-group">
                    <%= f.text_field :name, autofocus: true, :required => true, placeholder: "Name", class: "form-control" %>
                  </div>
                  <div class="form-group">
                    <%= f.email_field :email, :required => true, placeholder: "Email", class: "form-control" %>
                  </div>
                  <div class="form-group">
                    <%= f.text_area :message, :required => true, placeholder: "Your message goes here!", rows: "5", class: "form-control" %>
                  </div>
                  <div class= "hidden">
                    <%= f.input :nickname, :hint => 'Leave this field blank!' %>
                  </div>
                  <div>
                    </br>
                    <%= f.button :submit, 'Send message', :class=> "btn btn-primary btn-block" %>
                  </div>
                <% end %>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<div class="close-page"><a href="/"><i class="fa fa-times fa-3x"></i></a></div>

<div class="about_us">
  <a href="/about_us" class="">About Us</a>
  <a href="/terms">Terms</a>
  <a href="<%=new_contact_path%>">Contact</a>
</div>

</div>

<style>
.form-panel .form-control{
  height: auto;
}
</style>