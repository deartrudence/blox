<% if !current_user.bucket_blocs.where(:bloc_id => bloc.id).present? %>
  <%= link_to bucket_blocs_path(:user => current_user, :bloc => bloc), class: "add-to-bucket" ,method: :post, :remote => true do %>
    <i class="fa fa-plus"></i>
  <% end %>
<% else %>
  <%= link_to bucket_bloc_path(bloc), method: :delete, :remote => true do %>
  <i class="fa fa-minus"></i>
  <% end %>
<% end %>  